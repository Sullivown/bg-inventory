extends layout 

block content
	h1= title 

	h2= category.name

	h3 Boardgames:
	ul
		each boardgame in category_boardgames
			li
				a(href=boardgame.url) #{boardgame.title} 
		
		else 
			li No boardgames!
	
	hr
	a(href=`${category.url}/update`) Update Category
	|
	|

	a(href=`${category.url}/delete`) Delete Category