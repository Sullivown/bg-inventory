extends layout 

block content

  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Designer Name:
      input#name.form-control(type='text' placeholder='Designer full name' name='name' required='true' value=(undefined===designer ? '' : designer.name) )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg