extends layout 

block content

	h1=title

	form(method='POST' action='')
		div.form-group
			label(for='name') Publisher Name:
			input#name.form-control(type='text' placeholder='Designer full name' name='name' required='true' value=(undefined===publisher ? '' : publisher.name))
			label(for='website') Website:
			input#website.form-control(type='url' placeholder='http://' name='website' value=(undefined===publisher ? '' : publisher.website))

		button.btn.btn-primary(type='submit') Submit
	
	if errors
		ul
			for error in errors
				li!= error.msg