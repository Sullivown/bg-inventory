extends layout 

block content
	h1= title 

	ul
		each boardgameinstance in boardgameinstance_list 
			li
				a(href=boardgameinstance.url) #{boardgameinstance.boardgame.title} - #{boardgameinstance._id} - #{boardgameinstance.status} 
		
		else
			li There are no Board Game Instances!
	
	hr
	a(href='/boardgameinstance/create') Create New Board Game Instance